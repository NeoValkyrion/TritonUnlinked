<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="triton.unlinked.CourseProfileActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/course_desc"
        android:id="@+id/course_desc"
        android:layout_marginTop="40dp"
        android:textColor="@color/textbody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/course_section"
        android:id="@+id/course_section"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/course_desc"
        android:layout_alignRight="@+id/course_section_prof"
        android:textColor="@color/textbody"/>

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/course_section"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/course_section"
        android:textColor="@color/textbody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/course_section_type"
        android:id="@+id/course_section_type"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/course_section"
        android:textColor="@color/textbody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/course_section_prof"
        android:id="@+id/course_section_prof"
        android:layout_below="@+id/course_section_type"
        android:layout_alignParentLeft="true"
        android:textColor="@color/textbody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/course_section_time"
        android:id="@+id/course_section_time"
        android:layout_below="@+id/course_section_prof"
        android:layout_alignParentLeft="true"
        android:textColor="@color/textbody"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/course_section_loc"
        android:id="@+id/course_section_loc"
        android:layout_below="@+id/course_section_time"
        android:layout_alignParentLeft="true"
        android:textColor="@color/textbody"/>

</RelativeLayout>
