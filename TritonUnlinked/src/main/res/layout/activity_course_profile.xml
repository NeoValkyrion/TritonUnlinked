<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#4f87c6">

       <LinearLayout
           android:id="@+id/courseTitleBar"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:orientation="horizontal"
           android:textAlignment="center"
           android:gravity="center_horizontal">
           <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/courseTitleBar"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="0dp"
                   android:paddingBottom="0dp"
                   android:orientation="horizontal"
                   android:textAlignment="center"
                   android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/courseTitleFontSize"
                        android:id="@+id/course_sub" />
                    <TextView
                        android:text="190"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="@dimen/courseTitleFontSize"
                        android:id="@+id/course_num"/>
               </LinearLayout>
           <ImageView
               android:id="@+id/cbNextPicView"
               android:layout_gravity="right"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="5dp"
               android:layout_marginRight="10dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/info_icon"
               android:layout_weight="10"
               android:adjustViewBounds="false" />
           </RelativeLayout>
       </LinearLayout>
        <TextView
            android:id="@+id/course_section"
            android:background="#E0E0E0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Section 1"
            android:textColor="@color/textbody"/>
        <LinearLayout
            android:id="@+id/coursePagerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="#E0E0E0">
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                tools:context="triton.unlinked.CourseProfileActivity"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="15dp"
                android:clipToPadding="false"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/course_scrollview_desc"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:fillViewport="true"
        android:visibility="gone">
    <TextView
        android:id="@+id/course_desc"
        android:background="#DD333333"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/course_desc"
        android:padding="30dp"
        android:textSize="@dimen/courseHeaderFontSize"
        android:textColor="#FFFFFF"/>
    </ScrollView>
</FrameLayout>