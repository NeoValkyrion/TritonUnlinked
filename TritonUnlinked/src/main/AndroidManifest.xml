<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="triton.unlinked" >

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="triton.unlinked.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="triton.unlinked.CourseProfileActivity"
            android:label="@string/title_activity_course_profile" >
        </activity>
        <activity
            android:name="triton.unlinked.ProfessorProfileActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_professor_profile"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
